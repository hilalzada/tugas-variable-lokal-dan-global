#include <iostream>
using namespace std;
//ini adalah variable lokal Muhammad Hilal Zada
int contohFunction()
{
	int a = 10;
	return a;
	//variable dihapus dari alamat memori
}

int contohFunction2()
{
	int b = 20;
	return b;
	//variable dihapus dari alamat memori
}

int main()
{
	int a = 5;
	cout << "ini adalah variable lokal dari fungsi utama " << a << endl;
	cout << "ini adalah variable lokal dari fungsi contohFunction " << contohFunction();
	cout << endl;
	int b = 15;
	cout << "ini adalah variable lokal dari fungsi kedua " << b << endl;
	cout << "ini adalah variable lokal dari fungsi contohFfunction " << contohFunction2();
	cout << endl;
}
